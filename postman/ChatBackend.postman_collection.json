{
  "info": {
    "_postman_id": "4f787d13-5e8a-4acb-8b62-b0d73029e8f1",
    "name": "Chat Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Requests for the chat backend. Set {{baseUrl}} to your running server (e.g., http://localhost:8000)."
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "healthz"
          ]
        }
      }
    },
    {
      "name": "Create Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/sessions",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "sessions"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Session",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/sessions/{{session_id}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "sessions",
            "{{session_id}}"
          ]
        },
        "description": "Replace {{session_id}} with the id returned from Create Session."
      },
      "response": []
    },
    {
      "name": "Chat",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"user_id\": \"demo-user\",\n  \"message\": \"Tell me about Happy Valley School in Austin\",\n  \"city\": \"Austin\",\n  \"state\": \"TX\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/chat",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "chat"
          ]
        },
        "description": "Send a chat message. Set {{session_id}} using the Create Session response."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "session_id",
      "value": ""
    }
  ]
}
